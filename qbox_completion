  local curr_word=${COMP_WORDS[COMP_CWORD]}

  local commands="create-db query"
  local flag_opts="-h --help -V --version"
  local arg_opts=""

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

# Generates completions for the options and subcommands of the `formatter` subcommand.
function _picocli_qbox_formatter() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}

  local commands="format"
  local flag_opts="-h --help -V --version"
  local arg_opts=""

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

# Generates completions for the options and subcommands of the `logger` subcommand.
function _picocli_qbox_logger() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts="-t --timestamp -h --help -V --version"
  local arg_opts="-m --message -l --level -o --output -f --format"

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    -m|--message)
      return
      ;;
    -l|--level)
      return
      ;;
    -o|--output)
      return
      ;;
    -f|--format)
      return
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

# Generates completions for the options and subcommands of the `create-db` subcommand.
function _picocli_qbox_sqlite_createdb() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts=""
  local arg_opts="-o --output-db"

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    -o|--output-db)
      return
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

# Generates completions for the options and subcommands of the `query` subcommand.
function _picocli_qbox_sqlite_query() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts="-c --clean"
  local arg_opts="-d --db -q --query"

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    -d|--db)
      return
      ;;
    -q|--query)
      return
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

# Generates completions for the options and subcommands of the `format` subcommand.
function _picocli_qbox_formatter_format() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts="--file"
  local arg_opts="-i --input -o --output --input-format --output-format"
  local inputFormat_option_args="JSON YAML XML CSV PLAIN_TEXT TABLE" # --input-format values
  local outputFormat_option_args="JSON YAML XML CSV PLAIN_TEXT TABLE" # --output-format values

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    -i|--input)
      return
      ;;
    -o|--output)
      return
      ;;
    --input-format)
      COMPREPLY=( $( compgen -W "${inputFormat_option_args}" -- "${curr_word}" ) )
      return $?
      ;;
    --output-format)
      COMPREPLY=( $( compgen -W "${outputFormat_option_args}" -- "${curr_word}" ) )
      return $?
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    COMPREPLY=( $(compgen -W "${commands} ${positionals}" -- "${curr_word}") )
  fi
}

# Define a completion specification (a compspec) for the
# `qbox`, `qbox.sh`, and `qbox.bash` commands.
# Uses the bash `complete` builtin (see [6]) to specify that shell function
# `_complete_qbox` is responsible for generating possible completions for the
# current word on the command line.
# The `-o default` option means that if the function generated no matches, the
# default Bash completions and the Readline default filename completions are performed.
complete -F _complete_qbox -o default qbox qbox.sh qbox.bash
